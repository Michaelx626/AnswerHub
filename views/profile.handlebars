{{> profile-navigation}}

<!-- User Bio -->

<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <div class='profile-card'>
        <div class='profile-img'>
          <img src='/uploads/{{user.profilePic}}' alt='Profile Image' id="profile-pic-preview" />
        </div>
        <div class='profile-name'>
          <h4>{{user.name}}</h4>
        </div>
        <div class='profile-bio'>
          <p>Javascript | C++ | Python</p>
        </div>
        <div class='profile-bio'>
          <p id="userBio">{{user.userBio}}</p>
        </div>
      </div>
    </div>

    <!--User's Post-->
    <div class='col-md-6'>
    {{#with user as |user|}}
    {{#each user.posts as |post|}}
      <div class='profile-card'>
        <div class='user-post post-grid'>
          <div class='post-header'>
            <div class='post-author'>
              
              <img
                src='/uploads/{{user.profilePic}}'
                alt='Profile Image'
                class='profile-pic-preview' width="60px" height="60px"
              />
              <div class='post-author-info'>
                <h5>{{user.name}}</h5>
                <a href="mailto:{{user.email}}">@{{user.email}}</a>
              </div>
            </div>
            <div class='post-time'>
              <p>2 hours ago</p>
            </div>
          </div>
          <div class='post-content'>
            <p>{{post.content}}</p>
          </div>
          <div class='post-actions'>
            <a href='/post/{{post.id}}'>
              <i class='far fa-comment'></i>
              <span>10</span>
            </a>
            <a href='#'>
              <i class='far fa-heart'></i>
              <span>50</span>
            </a>
          </div>
        </div>
      </div>
      {{/each}}
      {{/with}}

    <!--Recommended Users or Content -->
    <div class='col-md-3'>
      <div class='trending'>
        <h4>Recommended</h4>
        <ul>
          <li><a href='#'>#webdevelopment</a></li>
          <li><a href='#'>#music</a></li>
          <li><a href='#'>#gaming</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<!--Search Modal-->
<div
  class='modal fade'
  id='exampleModal'
  tabindex='-1'
  aria-labelledby='exampleModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h1 class='modal-title fs-5' id='exampleModalLabel'>Edit Profile</h1>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        <div class='input-group mb-3'>
          <span class='input-group-text' id='basic-addon1'>@</span>
          <input
            type='text'
            class='form-control user_searches'
            placeholder='Username'
            aria-label='Username'
            aria-describedby='basic-addon1'
          />
        </div>
      </div>
      <div class='modal-footer'>
        <button
          type='button'
          class='btn btn-secondary'
          data-bs-dismiss='modal'
        >Close</button>
        <button type='button' class='btn btn-primary search_btn'>Search</button>
      </div>
    </div>
  </div>
</div>

  <!-- Edit Profile Modal-->
  <div class="modal fade" id="editProfile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Profile</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p> Change Your Profile Picture</p>
          <form enctype="multipart/form-data" id="upload-form">
  <input type="file" id="profile-pic-input" name="profilePic">

          <div class="form-group">
            <label for="bio">Bio:</label>
            <textarea class="form-control" id="bio" rows="5" name="bio"></textarea>
          </div>
        </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="upload-save" data-bs-dismiss="modal">Save</button>

        </div>
      </div>
    </div>
  </div>
  </div>




