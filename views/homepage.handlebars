{{#if logged_in}}
{{#each posts as |post|}}
<div class="row project">
  <div class="col-md-5">
    <h2>{{post.user.name}}</h2>
    <p>Created on: {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
  <div class="w-100 my-4 display-flex justify-space-around">
    <a href="/post/{{post.id}}">Comment</a>
    <button>Like</button>
  </div>
</div>
{{/each}}
{{else}}
<div class="display-flex justify-center align-center py-5 flex-column">
