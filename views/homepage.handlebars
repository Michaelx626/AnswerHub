<!-- Content Area -->
<div class="container mt-3">
  <div class="row">
    <!-- Left Column -->
    <div class="col-md-3">
      <div class="card">
        <div class="card-header">
          <h5>Profile</h5>
        </div>
        <div class="card-body">
          <img src="https://via.placeholder.com/150" alt="Profile Picture" class="img-fluid rounded-circle mb-3">
          <h4>{{users.name}}</h4>
          <a class="text-muted" href="mailto:{{users.email}}">@{{users.email}}</a>
          <ul class="list-unstyled">
            <li><i class="fas fa-user"></i> 10 Followers</li>
            <li><i class="fas fa-user"></i> 20 Following</li>
            <li><i class="fas fa-edit"></i> Edit Profile</li>
            <a href="/airesponse"><li><i class="fa-brands fa-bilibili"></i>AI Assistant</li></a>
          </ul>
        </div>
      </div>
    </div>

  <!-- Middle Column -->
    <div class="col-md-6">
      <div class="card mb-3"><div class="card-header">
        <h5>What's happening?</h5>
      </div>
      <div class="card-body">
        <form>
          <div class="form-group">
            <textarea class="form-control" id="user_inputbox" placeholder="Write something..." rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary post_btn">Post</button>
        </form>
      </div>
    </div>

    {{#each posts as |post|}}
    <div class="card">
      <div class="card-body">
        <div class="media mb-3">
          <img src="https://via.placeholder.com/50" class="mr-3 rounded-circle" alt="User Picture">
            <div class="media-body">
              <div class="post-grid">
                <h5 class="mt-0 post_user">{{post.user.name}} </h5>
                <p class="post_content"> {{post.content}}</p>
                <p class="mt-0 post_date">{{format_date post.date_created}} </p>
              </div>
              <div class="mt-3">
                <a href="/post/{{post.id}}"><i class="far fa-comment"></i> 
                {{#with post.comments}}
                {{post.comments.length}}
                {{/with}}
                </a>
                <a href="#" data-value="{{post.number_likes}}" data-id="{{post.id}}" class="getLikes"><i class="far fa-heart"></i>{{post.number_likes}}</a>                
              </div>
            </div>
        </div>
      </div>
    </div>
    {{/each}}

  <!-- Right Column -->
    <div class="card">
      <div class="card-header">
        <h5>Recommened Connections</h5>
      </div>
      <div class="card-body">
        <div class="media mb-3 recommended-user-block">
          <img src="https://via.placeholder.com/50" class="mr-3 rounded-circle recommended-user" alt="User Picture">
            <div class="media-body">
              <h5 class="mt-0 recommended-name">Jane Smith </h5>
              <button type="button" class="btn btn-primary follow-btn">Follow</button>
            </div>
        </div>
        <div class="media mb-3 recommended-user-block">
          <img src="https://via.placeholder.com/50" class="mr-3 rounded-circle recommended-user" alt="User Picture">
            <div class="media-body">
              <h5 class="mt-0 recommended-name">John Doe</h5>
              <button type="button" class="btn btn-primary follow-btn">Follow</button>
            </div>
        </div>
      </div>
    </div>
</div>    

<!--Search Modal-->
<div
  class='modal fade'
  id='exampleModal'
  tabindex='-1'
  aria-labelledby='exampleModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h1 class='modal-title fs-5' id='exampleModalLabel'>Modal title</h1>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        <div class='input-group mb-3'>
          <span class='input-group-text' id='basic-addon1'>@</span>
          <input
            type='text'
            class='form-control user_searches'
            placeholder='Username'
            aria-label='Username'
            aria-describedby='basic-addon1'
          />
        </div>
      </div>
      <div class='modal-footer'>
        <button
          type='button'
          class='btn btn-secondary'
          data-bs-dismiss='modal'
        >Close</button>
        <button type='button' class='btn btn-primary search_btn'>Search</button>
      </div>
    </div>
  </div>
</div>      
      
